do_install() {
	vmkdir usr/lib/insomnia
	vcopy packages/insomnia/dist/linux-unpacked/* usr/lib/insomnia

	vmkdir usr/bin
	ln -s /usr/lib/insomnia/insomnia ${DESTDIR}/usr/bin/

	vinstall "${FILESDIR}/insomnia.desktop" 644 usr/share/applications

	for size in 16 32 48 128; do
		vinstall packages/insomnia/dist/.icon-set/icon_${size}x${size}.png 644 usr/share/icons/hicolor/${size}x${size}/apps/ insomnia.png
	done

	for size in 256 512; do
		vinstall packages/insomnia/dist/.icon-set/icon_${size}.png 644 usr/share/icons/hicolor/${size}x${size}/apps/ insomnia.png
	done

	vlicense LICENSE
}
